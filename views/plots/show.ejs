<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <nav>
      <%- include('../partials/nav.ejs') %>
    </nav>
    <div class="container">
      <h1><%=plot.name%></h1>
      <div class="entry-info">
        <label for="type"><span class="term">Type:</span></label>
        <p><%=plot.type%></p>
        <label for="name"><span class="term">Name:</span></label>
        <p><%=plot.name%></p>
        <label for="description"><span class="term">Description:</span></label>
        <p><%=plot.description%></p>
      </div>
      <div class="buttons">
        <a href="/plots/<%=plot.id%>/edit" class="button-sus">EDIT</a>
        <form action="/plots/<%=plot.id%>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE" />
        </form>
        <a href="/plots" class="button-sus">BACK</a>
      </div>
    </div>
  </body>
</html>
